{
    "name": "ekino/hal-client",
    "description": "HalClient",
    "keywords": ["hal", "Hypermedia"],
    "homepage": "https://github.com/ekino/php-hal-client",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas Rabaix",
            "email": "thomas.rabaix@gmail.com"
        }
    ],
    "minimum-stability": "beta",
    "require": {
        "php": ">=5.4.0",
        "doctrine/collections": "~1.2",
        "php-http/client-implementation": "^1.0",
        "php-http/discovery": "^0.7.0",
        "php-http/message": "^1.0",
        "ql/uri-template": "1.1.0"
    },
    "require-dev": {
        "jms/serializer": "~0.16",
        "doctrine/collections": "~1.2",
        "php-http/guzzle6-adapter": "^1.0",
        "phpunit/phpunit": "*"
    },
    "suggest": {
        "jms/serializer": "Enable support of Resource Deserialization"
    },
    "autoload": {
        "psr-4": { "Ekino\\HalClient\\": "lib" }
    }
